{% extends 'base.html.twig' %}

{% block title %}Nous contacter{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Nous contacter</h1>
        {{ form_start(form, {'attr': {'class': 'contact-form'}}) }}
            <div class="row">
                <div class="col-sm">
                    <div class="form-group">
                        {{ form_label(form.name, 'Titre du mail', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="col-sm">
                    <div class="form-group">
                        {{ form_label(form.email, 'Votre email', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.message, 'Votre message', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows': 5}}) }}
            </div>
            {{ form_row(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
