{% extends 'base.html.twig' %}

{% block title %}Affichez votre avis !{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Nous contacter</h1>
    {{ form_start(form, {'attr': {'class': 'contact-form'}}) }}
        <div class="form-group">
            {{ form_label(form.pseudo, 'Pseudo', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.pseudo, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.commentaire, 'Commentaire', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.commentaire, {'attr': {'class': 'form-control', 'rows': 5}}) }}
        </div>
        {{ form_row(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
    {{ form_end(form) }}
</div>

{% endblock %}
