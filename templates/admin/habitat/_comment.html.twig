{% extends 'base.html.twig' %}
{% block title 'Gérer les différents animaux' %}
{% block body %}
<div class="container mt-4">
    <h1>Commenter l'état de l'habitat</h1>
    {{ form_start(form, {'attr': {'class': 'contact-form'}}) }}
    
    <div class="form-group">
        <label for="animal-name"><h4>Nom</h4></label>
        <p id="animal-name" class="form-control-static">{{ habitat.name }}</p>
    </div>

    <div class="form-group">
        <label><h4>Description</h4></label>
        <p class="form-control-static">{{ habitat.description }}</p>
    </div>

    <div class="form-group">
        <label><h4>Animaux</h4></label>
        {% for animal in habitat.animals %}
            <li>{{ animal.name }}</li>
        {% endfor %}
    </div>

    <div class="form-group">
        <label for="animal-detail"><h4>Commentaire du vétérinaire</h4></label>
        {{ form_row(form.commentaire_habitat, {'attr': {'class': 'form-control', 'id': 'commentaire_habitat'}}) }}
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">{{ button|default('Enregistrer') }}</button>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}
