{# _form_veterinary #}
<div class="container mt-4">
    {{ form_start(form, {'attr': {'class': 'contact-form'}}) }}
    
    <div class="form-group">
        <label for="animal-name"><strong>Nom</strong></label>
        <p id="animal-name" class="form-control-static">{{ animal.name }}</p>
    </div>

    <div class="form-group">
        <label><strong>Race</strong></label>
        <p class="form-control-static">{{ animal.getRaceLabels() }}</p>
    </div>

    <div class="form-group">
        <label><strong>Habitat</strong></label>
        <p class="form-control-static">{{ animal.habitat.name }}</p>
    </div>

    <div class="form-group">
        <label><strong>Dernier repas</strong></label>
        <p class="form-control-static">{{ animal.lastFedAt ? animal.lastFedAt|date('d/m/Y H:i:s') : 'Pas encore nourri' }}</p>
    </div>
    
    <div class="form-group">
        <label for="animal-detail"><strong>Type de repas conseillé</strong></label>
        {{ form_row(form.typeFood, {'attr': {'class': 'form-control', 'id': 'animal-typefood'}}) }}
    </div>

    <div class="form-group">
        <label for="animal-detail"><strong>Grammage du repas (g)</strong></label>
        {{ form_row(form.gramFood, {'attr': {'class': 'form-control', 'id': 'animal-gramfood'}}) }}
    </div>

    <div class="form-group">
        <label for="animal-detail"><strong>Détail</strong></label>
        {{ form_row(form.detail, {'attr': {'class': 'form-control', 'id': 'animal-detail'}}) }}
    </div>

    <div class="form-group">
        <label for="animal-state"><strong>État de l'animal</strong></label>
        {{ form_row(form.state, {'attr': {'class': 'form-control', 'id': 'animal-state'}}) }}
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">{{ button|default('Enregistrer') }}</button>
    </div>

    {{ form_end(form) }}
</div>
